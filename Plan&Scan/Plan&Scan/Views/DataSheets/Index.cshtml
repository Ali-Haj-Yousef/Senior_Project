@model List<StudentExamRegistration>
<div class="card shadow border-0 mt-4 text-center">
    <div class="card-header bg-info bg-gradient ml-0 py-3">
        <div class="row">
            <div class="text-center">
                <h2 class="text-white py-2">Your Data Sheet</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Student Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Course
                    </th>
                    <th>
                        Language
                    </th>
                    <th>
                        Room
                    </th>
                    <th>
                        Seat Number
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Time
                    </th>
                    <th>
                        Code Exam Day
                    </th>
                </tr>
            </thead>
            <tbody>
                    @foreach (StudentExamRegistration registration in Model)
                    {
                        <tr>
                            <td>@registration.StudentId</td>
                            <td>@registration.Name</td>
                            <td>@registration.Course</td>
                            <td>@registration.Lang</td>
                            <td>@registration.Room</td>
                            <td>@registration.SeatNb</td>
                            <td>@registration.Date</td>
                            <td>@registration.Time</td>
                            <td>@registration.ExamCode</td>                        
                        </tr>
                    }
            </tbody>
        </table>
        <a asp-controller="DataSheets" asp-action="PDF" class="btn btn-primary">Generate PDF</a>
    </div>
</div>